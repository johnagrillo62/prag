{
  "title": "Order",
  "type": "object",
  "required": ["id", "customer"],
  "properties": {
    "id": {"type": "integer"},
    "customer": {"$ref": "#/$defs/Customer"},
    "items": {
      "type": "array",
      "items": {"$ref": "#/$defs/LineItem"}
    }
  },
  "$defs": {
    "Customer": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {"type": "integer"},
        "name": {"type": "string"}
      }
    },
    "LineItem": {
      "type": "object",
      "required": ["sku", "qty"],
      "properties": {
        "sku": {"type": "string"},
        "qty": {"type": "integer"},
        "price": {"type": "number"}
      }
    }
  }
}
