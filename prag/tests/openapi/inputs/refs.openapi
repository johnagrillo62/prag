{
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "required": ["id", "customer"],
        "properties": {
          "id": {"type": "integer", "format": "int64"},
          "customer": {"$ref": "#/components/schemas/Customer"},
          "items": {
            "type": "array",
            "items": {"$ref": "#/components/schemas/LineItem"}
          },
          "total": {"type": "number"}
        }
      },
      "Customer": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {"type": "integer", "format": "int64"},
          "name": {"type": "string"},
          "email": {"type": "string"}
        }
      },
      "LineItem": {
        "type": "object",
        "required": ["sku", "qty"],
        "properties": {
          "sku": {"type": "string"},
          "qty": {"type": "integer"},
          "price": {"type": "number", "format": "float"}
        }
      }
    }
  }
}
