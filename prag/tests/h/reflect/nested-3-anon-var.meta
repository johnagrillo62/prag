namespace meta
{
namespace A
{
inline const auto fields = std::make_tuple(
    meta::field<&::A::x>("x"),
    meta::field<&::A::b>("b"));

namespace b
{
inline const auto fields = std::make_tuple(
    meta::field<&decltype(::A::b)::y>("y"),
    meta::field<&decltype(::A::b)::c>("c"));

namespace c
{
inline const auto fields = std::make_tuple(
    meta::field<&decltype(decltype(::A::b)::c)::z>("z"));

} // namespace c
} // namespace b
} // namespace A
} // namespace meta

namespace meta
{
template <> struct MetaTuple<::A>
{
  static inline const auto& fields = meta::A::fields;
  static constexpr auto tableName = "A";
  static constexpr auto query = "select x, b from A";
};
template <> struct MetaTuple<decltype(::A::b)>
{
  static inline const auto& fields = meta::A::b::fields;
};
template <> struct MetaTuple<decltype(decltype(::A::b)::c)>
{
  static inline const auto& fields = meta::A::b::c::fields;
};
} // namespace meta


